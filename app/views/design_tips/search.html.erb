<div class="font-serif text-2xl text-center">検索結果: <%= @results.count %>件</div>

<div class="bg-gray py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-xl px-4 md:px-8 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2 gap-4 md:gap-6 xl:gap-8">
      <% @results.each do |design_tip| %>
        <div class="bg-white flex flex-col md:flex-row items-center border rounded-lg overflow-hidden">
          <div class="flex flex-col gap-2 p-4 lg:p-6">

            <div class="text-brown text-xl font-serif font-bold hover:text-yellow-900">
              <%= link_to design_tip.title, design_tip.url, target: :_blank, rel: "noopener noreferrer" %>
            </div>

            <p class="text-gray-500"><%= design_tip.guidance %></p>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>