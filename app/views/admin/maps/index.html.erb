<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('.title') %></h1>
    <%= link_to '地域名作成へ', new_admin_map_path, class: "btn btn-outline outline-green-800 text-green-800 hover:text-white hover:bg-green-800 rounded-lg" %>
  </div>

  <div class="min-w-full">
    <div class='font-serif'>
      <% @maps.each do |map| %>

        <div class="my-5">
          <strong class="block font-medium mb-1">id</strong>
          <%= map.id %>
        </div>

        <div class="my-5">
          <strong class="block font-medium mb-1">地域名</strong>
          <%= map.name %>
        </div>

        <div class="my-5">
          <strong class="block font-medium mb-1">経度</strong>
          <%= map.latitude %>
        </div>

        <div class="my-5">
          <strong class="block font-medium mb-1">緯度</strong>
          <%= map.longitude %>
        </div>

        <% if action_name != "show" %>
          <%= link_to '地域名一覧へ', admin_maps_path(map), class: "btn btn-outline outline-green-800 text-green-800 hover:text-white hover:bg-green-800 rounded-lg" %>
          <%= link_to '地域名編集', edit_admin_map_path(map), class: "btn btn-outline outline-green-800 text-green-800 hover:text-white hover:bg-green-800 rounded-lg" %>
          <%= link_to '地域名詳細へ', admin_map_path(map), class: "btn btn-outline outline-green-800 text-green-800 hover:text-white hover:bg-green-800 rounded-lg" %>
          <hr class="mt-6">
        <% end %>
      <% end %>
    </div>
  </div>
</div>
