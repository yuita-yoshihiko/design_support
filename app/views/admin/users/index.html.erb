<div class="px-4 md:px-10 mx-auto w-full -m-24">
  <div class="flex flex-wrap mt-4">
    <div class="w-full mb-12 px-4">
      <div class="relative flex flex-col min-w-0 break-words w-full mt-20 mb-20 shadow-lg rounded bg-white">
        <div class="rounded-t mb-0 px-4 py-3 border-0">
          <div class="flex flex-wrap items-center">
            <div class="relative w-full px-4 max-w-full flex-grow flex-1">
              <h3 class="font-semibold text-lg text-blueGray-700">
                <%= t('.title') %>
              </h3>
            </div>
          </div>
        </div>
        <div>
          <div class='flex row'>
            <div class="px-6 align-middle py-3 text-xs font-semibold text-left">
              ID
            </div>
            <div class="px-6 align-middle py-3 text-xs font-semibold text-left">
              <%= User.human_attribute_name('name') %>
            </div>
            <div class="px-6 align-middle py-3 text-xs font-semibold text-left">
              <%= User.human_attribute_name('email') %>
            </div>
            <div class="px-6 align-middle py-3 text-xs font-semibold text-left">
              <%= User.human_attribute_name('role') %>
            </div>
            <div class="px-6 align-middle py-3 text-xs font-semibold text-left">
              <%= t('defaults.created_at') %>
            </div>
          </div>
          <% @users.each do |user| %>
            <div class='flex row'>
              <div class="px-6 align-middle text-xs p-4">
                <%= user.id %>
              </div>
              <div class="px-6 align-middle text-xs p-4">
                <%= user.name %>
              </div>
              <div class="px-6 align-middle text-xs p-4">
                <%= user.email %>
              </div>
              <div class="px-6 align-middle text-xs p-4">
                <%= user.role %>
              </div>
              <div class="px-6 align-middle text-xs p-4">
                <%= l user.created_at, format: :long %>
              </div>
              <div class="flex items-center font-serif">
                <%= link_to t('defaults.show'), admin_user_path(user), class: 'badge text-white bg-green-700 hover:bg-green-600  mr-2' %>
                <%= link_to t('defaults.edit'), edit_admin_user_path(user), class: 'badge text-white bg-green-700 hover:bg-green-600  mr-2' %>
                <%= link_to t('defaults.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'badge text-white bg-green-700 hover:bg-green-600 mr-2' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
