<% content_for(:title, t('.title')) %>
<div class="flex justify-center font-serif">
  <div class="bg-white rounded-lg lg:w-5/12 md:6/12 w-10/12 shadow-3xl mb-16">
    <div class="flex justify-center">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1 class="font-bold text-center text-2xl mt-12"><%= t '.title' %></h1>
        <div class="p-12 md:p-18">
          <%= form_with model: @list, local: true do |form| %>
            <% if @list.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@list.errors.count, "error") %> prohibited this favorite_list from being saved:</h2>

                <ul>
                  <% @list.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="flex flex-col mb-6 md:mb-8">
              <%= form.label :name %>
              <%= form.text_field :name, class: "border-none", required: true %>
            </div>

            <div class="flex items-center justify-center">
              <%= form.submit class: "btn bg-green-700 hover:bg-green-600 text-white font-serif text-xs rounded-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
