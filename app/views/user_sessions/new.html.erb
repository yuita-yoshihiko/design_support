<% content_for(:title, t('.title')) %>
<div class="flex justify-center font-serif">
  <div class="bg-white rounded-lg lg:w-5/12 md:6/12 w-10/12 shadow-3xl mb-16">
    <h1 class="font-bold text-center text-2xl mt-12"><%= t '.title' %></h1>
    <div class="p-12 md:p-18">
        <%= form_with url: login_path, local: true do |f| %>
          <div class="flex flex-col text-lg mb-6 md:mb-8">
            <div class="flex justify-center pr-20 md:pr-32">
              <%= f.label :email, User.human_attribute_name(:email) %>
            </div>
            <div class="flex justify-center">
              <%= f.email_field :email, class: "w-64 h-12 outline-green-800 rounded-lg" %>
            </div>
          </div>
          <div class="flex flex-col text-lg mb-6 md:mb-8">
            <div class="flex justify-center pr-28 md:pr-40">
              <%= f.label :password, User.human_attribute_name(:password) %>
            </div>
            <div class="flex justify-center">
              <%= f.password_field :password, class: "w-64 h-12 outline-green-800 rounded-lg" %>
            </div>
          </div>
          <div class="flex items-center justify-center">
            <%= f.submit 'ログイン', class: 'btn btn-outline outline-green-800 text-green-800 hover:text-white hover:bg-green-800 rounded-lg' %>
          </div>
        <% end %>
        <div class='flex flex-col text-center mt-20'>
          <%= link_to (t '.to_register_page'), new_user_path, class: 'text-gray-400 hover:text-green-900 active:text-green-900'%>
          <br>
          <%= link_to (t '.password_forget'), '#', class: 'text-gray-400 hover:text-green-900 active:text-green-900'%>
        </div>
    </div>
  </div>
</div>
