<% content_for(:title, t('.title')) %>
<div class="flex justify-center font-serif">
  <div class="bg-white rounded-lg lg:w-5/12 md:6/12 w-10/12 shadow-3xl mb-16">
    <div class="flex justify-center">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1 class="font-bold text-center text-2xl mt-12"><%= t '.title' %></h1>
        <div class="p-12 md:p-18">
          <%= form_with url: login_path, local: true do |f| %>
            <div class="flex flex-col mb-6 md:mb-8">
              <%= f.label :email, User.human_attribute_name(:email) %>
              <%= f.email_field :email, class: "border-none", required: true %>
            </div>
            <div class="flex flex-col mb-6 md:mb-8">
              <%= f.label :password, User.human_attribute_name(:password) %>
              <%= f.password_field :password, class: "border-none", required: true %>
            </div>
            <div class="flex justify-center">
              <%= f.submit 'ログイン', class: 'btn btn-sm bg-green-700 hover:bg-green-600 w-1/3 text-white rounded-full' %>
            </div>
          <% end %>

          <div class='flex flex-col text-center mt-2'>
            <br>
            <%= link_to auth_at_provider_path(provider: :google), class: 'flex justify-center' do%>
              <%= image_tag "btn_google_signin.jpg", loading: "lazy" %>
            <% end %>
            <br>
            <%= link_to (t '.to_register_page'), new_user_path, class: 'text-gray-400 hover:text-green-800 active:text-green-900'%>
            <br>
            <%= link_to (t '.password_forget'), new_password_reset_path, class: 'text-gray-400 hover:text-green-800 active:text-green-900'%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
