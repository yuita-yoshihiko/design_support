<div class="p-12 md:p-18">
  <%= form_with model: @user, local: true do |f| %>
    <div class="flex flex-col mb-4 md:mb-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'border-none', required: true %>
    </div>
    <div class="flex flex-col mb-4 md:mb-6">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'border-none', required: true %>
    </div>
    <div class="flex flex-col mb-4 md:mb-6">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'border-none', required: true %>
    </div>
    <div class="flex flex-col mb-6 md:mb-8">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'border-none', required: true %>
    </div>
    <div class="flex items-center justify-center">
      <%= f.submit '登録', class: 'btn btn-sm bg-green-700 hover:bg-green-600 w-1/3 text-white rounded-full' %>
    </div>
  <% end %>

  <div class='flex flex-col text-center mt-2'>
    <br>
    <%= link_to auth_at_provider_path(provider: :google), class: 'flex justify-center' do%>
      <%= image_tag "btn_google_signin.jpg", loading: "lazy" %>
    <% end %>
    <br>
    <%= link_to 'ログインページへ', login_path, class: 'text-gray-400 hover:text-green-800 active:text-green-900' %>
  </div>
</div>